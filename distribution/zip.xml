<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../home/bin</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../home/lib</directory>
            <includes>
                <include>*.py</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../home/lib</directory>
            <includes>
                <include>*.txt</include>
            </includes>
            <excludes>
                <exclude>requirements_dev.txt</exclude>
            </excludes>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../home/rules</directory>
            <includes>
                <include>**/*.py</include>
            </includes>
            <outputDirectory>/rules</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../home/rules</directory>
            <includes>
                <include>**/*.yaml</include>
            </includes>
            <outputDirectory>/rules</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../home/sensors</directory>
            <outputDirectory>/sensors</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../home/checks</directory>
            <outputDirectory>/checks</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../home/settings</directory>
            <outputDirectory>/settings</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../lib/target/output/dqo-lib-${project.version}/jars</directory>
            <outputDirectory>/jars</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/../README.md</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../CHANGELOG.md</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../home/core-site.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../VERSION</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../LICENSE</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../NOTICE</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../find-dqo-home.cmd</source>
            <outputDirectory>/bin</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../find-dqo-classpath.cmd</source>
            <outputDirectory>/bin</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../launch-dqo.cmd</source>
            <outputDirectory>/bin</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../dqo.cmd</source>
            <outputDirectory>/bin</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../find-dqo-home.sh</source>
            <outputDirectory>/bin</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../find-dqo-classpath.sh</source>
            <outputDirectory>/bin</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../dqo</source>
            <outputDirectory>/bin</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../dqops/${project.build.directory}/dqo-dqops-${project.version}.jar</source>
            <outputDirectory>/jars</outputDirectory>
        </file>
    </files>
</assembly>