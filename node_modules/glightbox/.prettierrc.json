{
  "trailingComma": "none",
  "tabWidth": 4,
  "printWidth": 220,
  "proseWrap": "never",
  "semi": true,
  "singleQuote": true,
  "jsxBracketSameLine": true,
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.yml",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
