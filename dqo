export DQO_VERSION=1.2.0

# Configure local development environment overrides
if [ -f $(dirname $0)/set-dqo-envs.sh ]; then
    . $(dirname $0)/set-dqo-envs.sh

    returnedValue=$?
    if [ $returnedValue -ne 0 ]; then
        echo "DQOps cannot be started"
        exit $returnedValue
    fi
fi

# Figure out where DQO is installed
. $(dirname $0)/find-dqo-home.sh
returnedValue=$?
if [ $returnedValue -ne 0 ]; then
    echo "DQOps cannot be started"
    exit $returnedValue
fi

# Configure class paths
. $(dirname $0)/find-dqo-classpath.sh

returnedValue=$?
if [ $returnedValue -ne 0 ]; then
    echo "DQOps cannot be started"
    exit $returnedValue
fi

$DQO_RUNNER $DQO_JAVA_OPTS --add-opens java.base/java.nio=ALL-UNNAMED --add-opens java.base/java.util.concurrent=ALL-UNNAMED -cp "$DQO_LAUNCH_CLASSPATH" org.springframework.boot.loader.JarLauncher $*